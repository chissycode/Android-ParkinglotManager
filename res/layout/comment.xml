<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg2"
   >

    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_save"
        android:layout_marginTop="117dp"
        android:layout_toLeftOf="@+id/title_save"
        android:ems="10"
        android:hint="@string/commentmessage"
        android:maxLines="5" 
        android:textColor="#fff">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_save"
        android:layout_alignRight="@+id/edit_comment"
        android:layout_alignTop="@+id/title_save"
        android:text="返回主界面" />

    <Button
        android:id="@+id/title_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:text="@string/save"
        android:textColor="#fff" />
    
    "

</RelativeLayout>